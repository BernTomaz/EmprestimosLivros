@using EmprestimosLivros.Dto
@model UsuarioRegisterDto

@{
    Layout = "_LayoutDeslogado";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container compact-form">

    <h2 class="mb-4 text-center">Cadastro de Usuários</h2>

    <form asp-action="Registrar" asp-controller="Login" method="post">

        <div class="form-group mb-3">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email">
        </div>

        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Nome" placeholder="Nome">
        </div>

        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Sobrenome" placeholder="Sobrenome">
        </div>

        <div class="form-group mb-3">
            <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">
        </div>

        <div class="form-group mb-4">
            <input type="password" class="form-control" asp-for="ConfirmaSenha" placeholder="Confirmar Senha">
        </div>

        <div class="d-flex justify-content-center gap-2">
            <button type="submit" class="btn btn-primary px-4">Cadastrar</button>
            <a asp-action="Index" asp-controller="Login" class="btn btn-outline-secondary px-4">Voltar</a>
        </div>

    </form>
</div>

<style>
    .compact-form {
        max-width: 400px; /* largura menor para ficar mais compacto */
        margin: auto; /* centraliza na tela */
    }

        .compact-form .form-control {
            padding: 0.6rem 0.75rem; /* altura moderada, sem ficar gigante */
            font-size: 0.95rem;
            border-radius: 6px;
        }

        .compact-form h2 {
            font-size: 1.4rem;
            font-weight: 600;
        }
</style>
