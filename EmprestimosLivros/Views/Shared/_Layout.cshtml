<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Emprestimos Livros</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Materia.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmprestimosLivros.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.datatables.net/v/dt/dt-2.2.1/datatables.min.css" rel="stylesheet">

    <style>
        /* --- ZERA SCROLL DA PÁGINA E EVITA OVERFLOW HORIZONTAL --- */
        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            overflow: hidden;
        }
        /* trava o scroll global */
        body, .container, main {
            overflow-x: hidden;
        }
            /* elimina barra horizontal */

            /* Layout full-viewport sem scroll de página */
            body.app-shell {
                height: 100dvh;
                min-height: 100dvh;
            }
        /* usa dvh p/ mobile */
        .page-wrap {
            height: 100%;
        }

        /* O main é quem rola quando necessário */
        main.app-main {
            overflow: auto;
            -webkit-overflow-scrolling: touch; /* suaviza no iOS */
            min-height: 0; /* evita estourar o flex container */
            padding-bottom: 1.25rem; /* respiro p/ não encostar no footer */
        }

        /* Navbar colapsada muito longa não força scroll do body */
        media (max-width: 576px) {
            .navbar-collapse

        {
            max-height: 70dvh;
            overflow: auto;
        }

        footer.footer {
            padding-bottom: env(safe-area-inset-bottom);
        }

        }

        /* Garante que nenhum CSS do tema fixe o footer */
        footer.footer {
            position: static !important;
            bottom: auto;
            width: 100%;
        }
    </style>
</head>
<body class="d-flex flex-column app-shell">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Emprestimos Tech</a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-houses mx-2"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Emprestimo" asp-action="Index">
                                <i class="bi bi-book-half mx-2"></i>Emprestimo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Logout">
                                <i class="bi bi-box-arrow-right mx-2"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- wrapper flex ocupando a viewport inteira -->
    <div class="page-wrap d-flex flex-column flex-fill">
        <div class="container flex-fill d-flex flex-column">
            <!-- O scroll fica aqui dentro -->
            <main role="main" class="app-main pb-4">
                @RenderBody()
            </main>
        </div>

        <footer class="mt-auto border-top footer text-muted bg-dark">
            <div class="container text-light text-center py-2">
                &copy; 2025 - EmprestimosLivros -
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-info">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.2.1/datatables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
